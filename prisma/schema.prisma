model User {
  id                  String   @id @default(cuid())
  email               String   @unique
  password            String
  isVerified          Boolean  @default(false)
  verificationToken   String?  @unique
  resetToken          String?  @unique // Add this line for the reset token
  resetTokenExpiry    DateTime? // Add this line for the token expiry time
}